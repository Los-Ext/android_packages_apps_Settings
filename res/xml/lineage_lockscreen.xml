<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:key="lineage_lockscreen"
    android:title="@string/lockscreen_category_title">

    <PreferenceCategory
        android:key="lockscreen_clock_category"
        android:title="@string/lockscreen_clock_category_title">

        <Preference
            android:key="android.theme.customization.lockscreen_clock_font"
            android:title="@string/theme_customization_lock_clock_title"
            android:summary="@string/theme_customization_lock_clock_summary"
            android:fragment="com.android.settings.lineage.fragments.LockClockFontsPickerPreview" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_widgets"
        android:title="@string/lockscreen_widgets_title">

        <Preference
            android:key="lockscreen_widgets"
            android:title="@string/lockscreen_widgets_title"
            android:summary="@string/lockscreen_widgets_enabled_summary"
            android:fragment="com.android.settings.lineage.fragments.LockScreenWidgets" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="lockscreen_category"
        android:title="@string/lockscreen_category_title">

        <com.lineage.support.preferences.SystemSettingSwitchPreference
            android:key="enable_ripple_effect"
            android:title="@string/enable_fingerprint_ripple_effect_title"
            android:summary="@string/enable_fingerprint_ripple_effect_summary"
            android:defaultValue="true" />

   </PreferenceCategory>

   <PreferenceCategory
       android:key="lockscreen_category"
       android:title="@string/vibration_category_title">

        <com.lineage.support.preferences.SystemSettingSwitchPreference
            android:key="fp_success_vibrate"
            android:title="@string/fp_success_vibrate_title"
            android:summary="@string/fp_success_vibrate_summary"
            android:defaultValue="true" />

        <com.lineage.support.preferences.SystemSettingSwitchPreference
            android:key="fp_error_vibrate"
            android:title="@string/fp_error_vibrate_title"
            android:summary="@string/fp_error_vibrate_summary"
            android:defaultValue="true" />

   </PreferenceCategory>

</PreferenceScreen>
